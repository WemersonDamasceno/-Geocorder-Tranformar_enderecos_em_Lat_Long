<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descubra sua latitude e longitude!"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/et_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:hint="Digite o endereÃ§o"/>

    <Button
        android:id="@+id/btn_descobrir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descobrir"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#11B84D"/>

    <TextView
        android:id="@+id/tv_lat_lont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat e Lont"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

</LinearLayout>